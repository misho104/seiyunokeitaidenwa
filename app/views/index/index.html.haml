-if login?
  %h3 #{Message["name"]}の#{Message['mono']}の情報を登録
  .register
    =t flash[:error] if flash[:error]
    =form_for Keitaidenwa.new do |f|
      %table
        =f.fields_for Seiyu.new do |s|
          %tr
            %th=s.label :name, "#{Message["name"]}の名前(必須)"
            %td=s.text_field :name
          %tr
            %th=s.label :url, "#{Message["name"]}のブログなどの URL"
            %td=s.text_field :url
        %tr
          %th=f.label :phone, "機種(必須)"
          %td=f.text_field :phone
        %tr
          %th=f.label :at, "その機種だった日(必須,YYYY/MM/DD)"
          %td=f.text_field :at
        %tr
          %th=f.label :url, "その#{Message['mono']}であることが分かる URL(必須)"
          %th=f.text_field :url
      %p=f.submit "登録"
  %h4=link_to "Tweet から調べる", tweet_path
=raw @html
%p
  =link_to "沢山の#{Message['mono']}を持っている#{Message["name"]}", seiyu_ranking_path
  =link_to "沢山の#{Message["name"]}に使われている#{Message['mono']}", denwa_ranking_path
